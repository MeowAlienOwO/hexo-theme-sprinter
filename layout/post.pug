extends includes/layout.pug

block content
  #post.card
    if page.cover
      .post-cover
        if page.cover.image
          img(src=page.cover.image)
        if page.cover.author
          .cover-author
            a(href=page.cover.source)= 'author: ' + page.cover.author
    .post-title
      h1#title= page.title

      time#date(datetime=page.date.toJSON())= date(page.date, date_format)

    article.md-article.container
      != page.content
    
    .post-footer
      .tags
        span
          i.fas.fa-tag
        each tag in page.tags.data
          a(href=url_for(tag.path))
            span.tag=tag.name
      if config.share
        .share
          //- include includes/_thirdparty/mobshare.pug
          include includes/_thirdparty/sharejs.pug
  //- #paginator!= paginator()

